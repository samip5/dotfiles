  - '*.yaml'
  - '*.yml'
  - '.yamllint'

rules:
  empty-lines:
    max: 1
  empty-values: enable
  indentation:
    indent-sequences: consistent
  line-length:
    level: warning
  new-line-at-end-of-file: disable
  truthy:
    allowed-values:
      - 'true'
      - 'false'
      - 'yes'
      - 'no'
      - 'on'
      - 'off'
